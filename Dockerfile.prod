FROM python:alpine

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Ensure runtime directories exist for logs and submissions
RUN mkdir -p logs submissions submissions.bk

CMD ["gunicorn", "-c", "gunicorn.conf.py", "app:app"]
