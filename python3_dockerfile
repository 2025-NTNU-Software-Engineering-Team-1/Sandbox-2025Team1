# for python3

FROM ubuntu:18.04

LABEL maintainer="Normal-OJ"

# update
RUN apt-get update -y

# install seccomp
RUN apt-get install seccomp -y

# install python3
RUN apt-get install python3 -y

# sandbox user with uid:1450
RUN useradd sandbox -u 1450

# result folder
RUN mkdir /result

# sandbox binary
COPY sandbox /usr/bin/
